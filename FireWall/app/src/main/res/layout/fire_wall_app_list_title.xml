<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/list_app_padding_horizontal"
        android:paddingRight="@dimen/list_app_padding_horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/pid_title"
            android:textColor="@color/colorStatusTitle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fw_app_list_title_margin"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/app_title"
            android:textColor="@color/colorStatusTitle"/>

        <ImageView
            android:id="@+id/img_block_wifi"
            android:layout_width="@dimen/fw_app_list_title_icon_size"
            android:layout_height="@dimen/fw_app_list_title_icon_size"
            android:src="@drawable/wifi"/>

        <ImageView
            android:id="@+id/img_block_data"
            android:layout_width="@dimen/fw_app_list_title_icon_size"
            android:layout_height="@dimen/fw_app_list_title_icon_size"
            android:layout_marginStart="@dimen/app_item_margin"
            android:src="@drawable/data"/>


    </LinearLayout>

    <include layout="@layout/line"/>
</LinearLayout>
