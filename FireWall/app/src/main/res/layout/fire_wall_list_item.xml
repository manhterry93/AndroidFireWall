<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/list_app_padding_horizontal">

    <TextView
        android:id="@+id/txt_uid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="uid"
        android:textColor="@color/colorStatusTitle"/>

    <LinearLayout
        android:id="@+id/layout_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_app_icon"
            android:layout_width="@dimen/app_item_icon_size"
            android:layout_height="@dimen/app_item_icon_size"
            android:padding="@dimen/app_item_icon_padding"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/txt_app_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/colorStatusTitle"
            android:layout_gravity="center_vertical"
            android:text="App detail"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_3g_check"
        android:layout_width="@dimen/list_img_check_size"
        android:layout_height="@dimen/list_img_check_size"
        android:layout_marginLeft="@dimen/app_item_margin"
        android:src="@drawable/allow"/>

    <ImageView
        android:id="@+id/img_wifi_check"
        android:layout_width="@dimen/list_img_check_size"
        android:layout_height="@dimen/list_img_check_size"
        android:layout_marginLeft="@dimen/app_item_margin"
        android:src="@drawable/allow"/>
</LinearLayout>